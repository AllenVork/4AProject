<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/iv_imag"
        android:layout_width="60dp"
        android:layout_height="65dp"
         android:layout_marginLeft="8dp"
         android:layout_centerVertical="true"
        android:background="@drawable/videohistorybg"/>
    
    
    
     <TextView
        android:id="@+id/tv_HistoryViedeoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_imag"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:textSize="20sp"
        android:textStyle="normal" />
    
        
   

    <TextView
        android:id="@+id/tv_HistoryHadseeTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="19sp"
        android:textColor="@color/grey"
        android:ellipsize="end"
        android:textStyle="bold"
         android:layout_toRightOf="@id/iv_imag"
        android:layout_below="@id/tv_HistoryViedeoName"
        android:layout_marginLeft="10dp"
        android:lines="1" />

</RelativeLayout>