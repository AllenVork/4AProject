<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/menu_bg" >

    <ImageView
        android:id="@+id/iv_showPageNum"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/page_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_showPageNum"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/table_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_marginTop="5dp"
             android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/imgBt_person"
                style="@style/smallImageViewStyle"
                
                android:src="@drawable/person" />
  
             <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/imgBt_aboutus"
                style="@style/smallImageViewStyle"
                android:src="@drawable/aboutus" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="10dp"
             android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
              <ImageView
                android:id="@+id/imgBt_erweima"
                style="@style/smallImageViewStyle"
                android:src="@drawable/erweima" />

            <ImageView
                android:id="@+id/imgBt_shoudian"
                android:layout_marginLeft="10dp"
                style="@style/smallImageViewStyle"
                android:src="@drawable/shoudiantong" />
            
        </LinearLayout>
        
        </LinearLayout>
        
       

</RelativeLayout>