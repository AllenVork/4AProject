<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/menu_bg" >

    <ImageView
        android:id="@+id/iv_showPageNumOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/page_one" />

    <LinearLayout
        android:layout_below="@id/iv_showPageNumOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/table_bg"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgBt_news"
                 style="@style/smallImageViewStyle"
                android:src="@drawable/news" />

            <ImageView
                android:id="@+id/imgBt_study"
                android:layout_marginLeft="10dp"
                 style="@style/smallImageViewStyle"
                android:src="@drawable/study" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgBt_office"
               style="@style/smallImageViewStyle"
                android:src="@drawable/office" />

            <ImageView
                android:id="@+id/imgBt_forum"
                android:layout_marginLeft="10dp"
                 style="@style/smallImageViewStyle"
                android:src="@drawable/forum" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
             android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgBt_exam"
                style="@style/smallImageViewStyle"
                android:src="@drawable/exam" />

            <ImageView
                android:id="@+id/imgBt_message"
                android:layout_marginLeft="10dp"
                style="@style/smallImageViewStyle"
                android:src="@drawable/message" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>